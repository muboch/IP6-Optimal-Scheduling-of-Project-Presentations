<?xml version = "1.0" encoding = "UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{dd.MM.yyy HH:mm:ss.SSS}] %-5level - %m%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <File>${user.home}/app.log</File> <!-- LOCATION of FILE WHERE YOU WANT TO SAVE -->
        <encoder>
            <pattern>[%d{dd.MM.yyy HH:mm:ss.SSS}] %-5level - %m%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>